# vim: set ft=ruby:

search do
  prune_dirs /\A(\.svn|\.git|\.terraform|CVS|tmp|coverage|pkg)\z/
  skip_files /(\A\.|\.sw[pon]\z|\.(log|fnm|jpg|jpeg|png|pdf|svg)\z|\Atags\z|~\z)/i
end

discover do
  prune_dirs /\A(\.svn|\.git|\.terraform|\.yardoc|CVS|tmp|coverage|pkg)\z/
  skip_files /(\A\.|\.sw[pon]\z|\.log\z|~\z)/
  binary false
end

strip_spaces do
  prune_dirs /\A(\..*|CVS|pkg)\z/
  skip_files /(\A\.|\.sw[pon]\z|\.log\z|~\z)/
end

probe do
  test_framework :'test-unit'
end

ssh_tunnel do
  terminal_multiplexer :tmux
  login_session "/home/#{ENV['USER']}"
end

classify do
  shift_path_by_default 1
end
